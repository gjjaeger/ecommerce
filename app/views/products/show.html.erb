
<div class=" container item-show">
  <p id="notice"><%= notice %></p>

  <%if @product.category_id=="1"||@product.category_id=="3"%>
    <div class="row">
      <div class="col-xs-9">
        <div class="col-xs-4 col-xs-offset-0">
          <%= image_tag(@product.images.first.photo.url, :class=>"product-show-image") %>
        </div>
        <div class="col-xs-8 product-details">
          <div class="col-xs-12 product-title">
            <span class="title"><%=@product.name%></span>
          </div>
          <div class="col-xs-12 product-description">
            <span class="description"><%=@product.description%></span>
          </div>
        </div>
        <div class="col-xs-12 storage">
          <span class="sub-title">Storage Instructions: </span>
          <span class="storage-inst"><%=@product.storage_inst%></span>
        </div>
      </div>
      <div class="col-xs-3 product-ingredients">
        <div class="col-xs-12">
          <span class="sub-title">Ingredients</span>
        </div>
        <%@product.ingredients.each do |ingredient|%>
          <div class="col-xs-10 col-xs-offset-1 ingredient">
            <span class="ingredient-name"><%=ingredient.name%></span>
            <%= image_tag(ingredient.name + "-icon", :class=>"ingredient-icon") %>
          </div>
        <%end%>
      </div>
    </div>
  <%end%>
  <%if @product.category_id=="2"%>
    <div class="row">
      <%= image_tag(@product.images.first.photo.url, :id=>"product-image") %>
    </div>
    <div class="row">
      <div class="col-xs-9">
        <div class="col-xs-4 col-xs-offset-0">
          <%= image_tag(@product.images.second.photo.url, :class=>"product-show-image") %>
        </div>
        <div class="col-xs-8 product-details">
          <div class="col-xs-12 product-title">
            <span class="title"><%=@product.name%></span>
          </div>
          <div class="col-xs-12 product-description">
            <span class="description"><%=@product.description%></span>
          </div>
        </div>
      </div>
      <div class="col-xs-3 product-materials">
        <div class="col-xs-12">
          <span class="sub-title">Materials</span>
        </div>
        <%@product.materials.each do |material|%>
          <div class="col-xs-10 col-xs-offset-1 material">
            <span class="material-name"><%=material.name%></span>
            <%= image_tag(material.name + "-icon", :class=>"material-icon") %>
          </div>
        <%end%>
      </div>
    </div>
    <div class="row">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <% @product.images.each_with_index do |image, index| %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<%=index%>" class="<%= index == 0 ? 'active' : '' %>"></li>
          <% end %>
        </ol>
        <div class="carousel-inner" role="listbox">
          <% @product.images.each_with_index do |image, index| %>
            <div class="carousel-item item <%=index == 0 ? 'active' : '' %>">
              <%= image_tag(image.photo.url, :class=>"d-block img-fluid")%>
            </div>
          <% end %>
        </div>
        <a class="carousel-control left" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control right" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  <%end%>
  <%if @product.category_id=="3"%>
    <%= link_to "Buy", product_delivery_path(@product), remote: true, class: "btn btn-default" %>
  <%end%>

  <div class="addtional-details">
    <% if @product.category_id =="1" %>
      <div class="sizes row">
        <%@product.sizes.each do |size|%>
          <div class="size">
            <% if size.amount<=100%>
              <div class="size-image">
                <%=image_tag("jar.png", :class=>"jam-size extra-small")%>
              </div>
            <% end %>
            <% if size.amount>100 && size.amount<=200 %>
              <div class="size-image">
                <%= image_tag("jar.png", :class=>"jam-size small") %>
              </div>
            <% end %>
            <% if size.amount>200 && size.amount<=300 %>
              <div class="size-image">
                <%= image_tag("jar.png", :class=>"jam-size medium") %>
              </div>
            <% end %>
            <% if size.amount>300 %>
              <div class="size-image">
                <%= image_tag("jar.png", :class=>"jam-size large") %>
              </div>
            <% end %>
            <div class="size-amount">
              <%=size.amount%>g
            </div>
            <div class="size-price">
              <%=number_to_currency size.price%>
            </div>
            <div class="size-add-cart">
              <%= form_for @order_item do |f| %>
                <%= f.hidden_field :product_id, value: @product.id %>
                <%= f.hidden_field :size, value: size.amount%>
                <%= f.number_field :quantity, :class=>"jam-quantity" %>
                <%= button_tag(type: 'submit', :class=>"add-cart btn btn-default") do %>
                  <span class="add-cart-text">Add to cart</span>
                <%end%>
              <% end %>
            </div>
          </div>
        <%end%>
      </div>
    <% end %>
  </div>
</div>
