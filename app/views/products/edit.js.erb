$(document).on('change','#pictureInput',function(event){
  var files = event.target.files;
  var image = files[0]
  var reader = new FileReader();
  reader.onload = function(file) {
    var img = new Image();
    img.src = file.target.result;
    img.class="preview-img"
    $('#target').html(img);
  }
  reader.readAsDataURL(image);
});
